<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--全屏模式，仅有任务栏，无主题栏目-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--全屏模式，无任务栏-->
    <style name="FullScreenWithoutTitleBar" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="background">@color/white</item>
    </style>

    <!--全屏模式，仅有任务栏，无主题栏目，且为透明状态-->
    <style name="Transparent" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AccontItem">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="AccountDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#80ffffff</item>
    </style>

    <!-- 投算器  复选框样式 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!-- 选择图片弹出dialog样式ui_custom_dialog_style -->
    <style name="select_pic_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#ededed</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- true则允许背景为暗   反之为亮 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!--TestTab4设置指示器相关样式-->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/viewpager_title_textcolor</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <!-- 下载更新的水平进度条 -->
    <style name="UpdateProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_update_bar</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

    <style name="DialogTransletTheme">
        <item name="android:windowBackground">@color/black_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="TrcBottomTabButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:onClick">onClick</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TrcBottomTabIcon">
        <item name="android:paddingTop">2dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="TrcBottomTabTitle">
        <item name="android:textColor">@drawable/trc_main_text_color</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">@dimen/main_bottom_txt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
