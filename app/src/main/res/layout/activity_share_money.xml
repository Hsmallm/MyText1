<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <FrameLayout
        android:id="@+id/title_view"
        style="@style/BaseToolbarStyle">

        <ImageView
            android:id="@+id/btn_return"
            style="@style/BaseToolbarIconStyle"
            android:src="@drawable/base_toolbar_title_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享赚钱"
            android:textColor="@color/titleTxtColor"
            android:textSize="17dp" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shopping_share_money_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/share_money_img"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/red"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/share_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="5dp"
                    android:text="美妆 恩泽 纯棉卫生日常用品纯棉卫生日常用品纯棉卫生日常用品"
                    android:textColor="@color/font_black"
                    android:textSize="16dp" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black_transparent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/share_money_coupon"
                        android:layout_width="48dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="券后价"
                        android:textColor="@color/font_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/share_money_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="￥19.9"
                        android:textColor="@color/red"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/share_money_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="￥1580"
                        android:textColor="@color/grey"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="优惠券"
                        android:textColor="@color/text_right_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/share_money_discounts_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.00元"
                        android:textColor="@color/red"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shopping_trmall_logo_of_share_money" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:src="@drawable/shopping_trmall_logo_of_share_money" />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/line_grey_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="长按二维码，查看商品详情"
                        android:textColor="#b5b5b5"
                        android:textSize="12dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/share_money_qrcord"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/shopping_trmall_logo_of_share_money" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
