<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_first_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:src="@drawable/first_page_cover_more" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignTop="@id/icon"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/icon"
        android:src="@drawable/first_page_cover_line_arrow" />

    <ImageView
        android:id="@+id/form"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/first_page_cover_tags" />

    <ImageView
        android:id="@+id/tips"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/form"
        android:layout_centerHorizontal="true"
        android:src="@drawable/first_page_cover_tips" />

    <ImageView
        android:id="@+id/guide_known"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/tips"
        android:layout_centerHorizontal="true"
        android:src="@drawable/first_page_cover_known" />
</RelativeLayout>