<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_txt"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="begin"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="ValueAnimator"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/roll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roll_bg"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icun2"/>

        <TextView
            android:id="@+id/roll_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="13秒前，浙江 王先生 ￥888888"
            android:textColor="@color/white"
            android:textSize="14dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roll_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableLeft="@drawable/icun2"
        android:drawablePadding="5dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:text="13秒前，浙江 王先生 ￥888888"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="gone"/>

</LinearLayout>